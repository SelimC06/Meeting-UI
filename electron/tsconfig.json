{
  "compilerOptions": {
    "outDir": "../dist-electron",
    "target": "ES2022",
    "module": "CommonJS",              // <-- force CJS outputs (.js)
    "moduleResolution": "Node",        // <-- NOT "bundler"
    "esModuleInterop": true,
    "types": ["node", "electron"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src", "electron", "src/**/*.d.ts", "./main.ts", "./preload.ts"],
  "references": [{ "path": "../tsconfig.node.json" }]
}
